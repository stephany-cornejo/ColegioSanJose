@page
@using Microsoft.AspNetCore.Mvc.Rendering
@model SanJoseEstudiantes.Models.ViewModels.ExpedienteCreateViewModel
@{
 ViewBag.Title = "Nuevo Expediente";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Nuevo expediente", "", FormMethod.Post))
{
 <div class="row">
 <div class="col-md-12">

 <div class="form-group">
 @Html.LabelFor(m => m.AlumnoId, "Alumno")
 @Html.DropDownListFor(m => m.AlumnoId, (IEnumerable<SelectListItem>)ViewBag.Alumnos, "Seleccionar alumno", new { @class = "form-control" })
 </div>

 <div class="form-group">
 @Html.LabelFor(m => m.MateriaId, "Materia")
 @Html.DropDownListFor(m => m.MateriaId, (IEnumerable<SelectListItem>)ViewBag.Materias, "Seleccionar materia", new { @class = "form-control" })
 </div>

 <div class="form-group">
 @Html.LabelFor(m => m.NotaFinal)
 @Html.TextBoxFor(m => m.NotaFinal, new { @class = "form-control", type = "number", step = "0.01", min = "0", max = "10" })
 </div>

 <div class="form-group">
 @Html.LabelFor(m => m.Observaciones)
 @Html.TextAreaFor(m => m.Observaciones, new { @class = "form-control", rows =3 })
 </div>

 <div class="form-group mt-3">
 <input type="submit" value="Guardar Expediente" class="btn btn-primary" />
 </div>

 </div>
 </div>
}
